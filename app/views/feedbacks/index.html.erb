<div class='container'>
<p id="notice"><%= notice %></p>

<h1>Các thư phản hồi</h1>

<table>
  <thead>
    <tr>
    <th>STT</th>
      <th>Họ và tên</th>
      <th>Email</th>
      <th>Nội dung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% i = 0 %>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= i+=1 %></td>
        <td><%= feedback.hoten %></td>
        <td><%= feedback.email %></td>
        <td><%= feedback.content %></td>
        <td><%= link_to 'Trả lời', feedback %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>