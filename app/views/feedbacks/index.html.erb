<%= render 'users/menuuser' %>
<div class='container'>
<p id="notice"><%= notice %></p>

<h3 class="w3-center">Danh sách thư phản hồi người dùng</h1>

<%= form_tag(thongtinsach_path, method: :get) do %>
<%= text_field_tag :timkiem , params[:timkiem] %>
<%= submit_tag 'Tìm kiếm', hoten: nil %>
<% end %>

<table class="tablest" style="margin-top:20px ">
  <thead>
    <tr>
    <th>STT</th>
      <th>Họ và tên</th>
      <th>Email</th>
      <th>Nội dung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% i = 0 %>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= i+=1 %></td>
        <td><%= feedback.hoten %></td>
        <td><%= feedback.email %></td>
        <td><%= feedback.content %></td>
        <td><%= link_to 'Trả lời', feedback %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>