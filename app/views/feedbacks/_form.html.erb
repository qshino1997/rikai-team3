<%= form_with(model: feedback, local: true) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% @users.each do |user| %>
    
  <div class="field" id="id_user">
    <%= form.label :user_id %>
    <%= form.number_field :user_id, value:user.id %>
  </div>

  <div class="field">
    <%= form.label :email,"Nhập email" %>
    <%= form.text_field :email, value:user.email %>
  </div>

  <div class="field">
    <%= form.label :content,"Nhập nội dung" %>
    <%= form.text_area :content, rows: "4",cols:"23" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>

<% end %>
<script>
var tx = document.getElementsByTagName('textarea');
for (var i = 0; i < tx.length; i++) {
  tx[i].setAttribute('style', 'height:' + (tx[i].scrollHeight) + 'px;overflow-y:hidden;');
  tx[i].addEventListener("input", OnInput, false);
}

function OnInput(e) {
  this.style.height = 'auto';
  this.style.height = (this.scrollHeight) + 'px';
}


</script>