<%= render 'users/menusach' %>
<div class='container'>
<p id="notice"><%= notice %></p>

<h3 class="w3-center">Sách đang mượn</h3>

<table class="tablest">
  <thead>
    <tr>
      <th>STT</th>
      <th>Mã sách</th>
      <th>Tên sách</th>
      <th>Ngày mượn</th>
      <th>Tình trạng</th>
     
    </tr>
  </thead>

  <tbody>
  <% i = 0 %>
    <% @borrows.each do |borrow| %>
      <tr>
      <td><%= i+=1 %></td>
        <td><%= borrow.indentify_code %></td>
        <td><%= borrow.tieude %></td>
        <td><%= borrow.created_at %></td>
        <% if borrow.mode == 1 %>
        <td><span class="tinhtrang" > Chưa trả </button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate%>

</div>