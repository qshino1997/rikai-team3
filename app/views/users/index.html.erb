        <td>Quản lý</td>
        <% else %>
        <td>Người mượn </td> 
        <% end %>
        <td><%= link_to 'Thông tin', user %></td>
        <td ><%= link_to 'Sửa', admin_edit_user_path(current_user) %></td>
        <td><%= link_to 'Xóa', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
